<!DOCTYPE html>
<html lang="en">

<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <meta http-equiv="X-UA-Compatible" content="ie=edge">
 <title>Dash Board</title>

 <!-- Bootstrap CDN  -->
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
 <script src="https://kit.fontawesome.com/e2169f0192.js" crossorigin="anonymous"></script>

 <!-- Local stylesheet link  -->
 <link rel="stylesheet" href="/css/controlPanel.css">
 <link rel="stylesheet" href="/css/alumni_sign_up.css">

</head>

<body>
<%- include('navbar') -%>

 <!-- Form details -->
 <form action="/alumni_sign_up" id="form" method="POST">
  <!-- Getting Account information -->
  <div class="cont" id="account-info">
   <h1>Account Login Info</h1>
   <div class="input-flex">
    <i class="fas fa-user-tie" id="u"></i>
    <input type="text" name="Username" id="username" placeholder="Username" required>
    <i id="user-check" class="indicator">&#33;</i>
   </div>

   <div class="input-flex">
    <i class="fa fa-envelope" aria-hidden="true" id="e"></i>
    <input type="email" name="Email" id="email" placeholder="Email" required>
   </div>

   <div class="input-flex">
    <i class="fas fa-unlock-alt" id="p"></i>
    <input type="password" name="Password" id="password" placeholder="Password" required>
    <i id="password-check" class="indicator">&#33;</i>

   </div>

   <div class="input-flex">
    <i class="fas fa-unlock-alt" id="rp"></i>
    <input type="password" name="Re-Password" id="re-password" placeholder="Conform Password" required>
    <i id="re-password-check" class="indicator">&#33;</i>
   </div>
  </div>

  <!-- Getting Personal information  -->
  <div class="cont" id="personal-info">
   <h1>Personal Info</h1>
   <div class="inp">
    <input type="text" name="First_Name" id="first-name" placeholder="First Name" required>
    <i id="first-name-check" class="indicator">&#33;</i>
   </div>

   <div class="inp">
    <input type="text" name="Second_Name" id="second-name" placeholder="Second Name">
   </div>

   <div class="inp">
    <input type="number" name="Reg_number" id="reg-num" placeholder="Register Number" required>
    <!-- <i class="fa fa-check" aria-hidden="true"></i> -->
    <i id="reg-num-check" class="indicator">&#33;</i>
   </div>


   <div class="inp">
    <input type="number" name="Phone" id="phone" placeholder="Phone No +91" required>
    <i id="phone-check" class="indicator">&#33;</i>
   </div>

   <div class="inp">
    <input type="text" list="college-name" name="College" id="ug-college-name" required placeholder="College Name">
    <i id="ug-college-name-check" class="indicator">&#33;</i>
   </div>

   <datalist id="college-name">
    <option value="University College of Engineering(BIT campus)"></option>
    <option value="Anna University(CEG campus)"></option>
   </datalist>

   <div class="ug">
    <div class="inp">
     <input type="text" list="ug-name" name="Ug_course" id="ug-course" placeholder="UG Course Name" required><i
      id="ug-course-check" class="indicator">&#33;</i>
    </div>

    <datalist id="ug-name">
     <option value="B.E.Computer Science And Engineering"></option>
     <option value="B.E.Civil Engineering"></option>
     <option value="B.E.Electrical And Electronic Engineering"></option>
     <option value="B.E.Mechanical Engineering"></option>
     <option value="B.E.Information Technology"></option>
     <option value="B.E.Aeronautical Engineering"></option>
     <option value="B.E.Electronics and Communication Engineering"></option>
     <option value="B.E.Electronics and Instrumentation Engineering"></option>
     <option value="B.E.Mechatronics Engineering"></option>
     <option value="B.E.Automobile Engineering"></option>
     <option value="B.E.Chemical Engineering"></option>
     <option value="B.E.Biotechnology"></option>
     <option value="B.E.Biomedical Engineering"></option>
    </datalist>


    <div class="inp">
     <input min="1950" max="2025" type="Number" name="Year_of_ug" id="year-of-ug" placeholder="Year of Passing">
     <i id="year-of-ug-check" class="indicator">&#33;</i>
    </div>
   </div>

   <div class="pg">
    <input type="text" name="Pg_course" id="pg-course" placeholder="PG Course Name" list="pg-name">
    <input min="1950" max="2025" type="Number" name="Year_of_pg" id="year-of-pg" placeholder="Year of Passing">
   </div>

   <datalist id="pg-name">
    <option value="M.E.Computer Science And Engineering"></option>
    <option value="M.E.Civil Engineering"></option>
    <option value="M.E.Electrical And Electronic Engineering"></option>
    <option value="M.E.Mechanical Engineering"></option>
    <option value="M.E.Information Technology"></option>
    <option value="M.E.Aeronautical Engineering"></option>
    <option value="M.E.Electronics and Communication Engineering"></option>
    <option value="M.E.Electronics and Instrumentation Engineering"></option>
    <option value="M.E.Mechatronics Engineering"></option>
    <option value="M.E.Automobile Engineering"></option>
    <option value="M.E.Chemical Engineering"></option>
    <option value="M.E.Biotechnology"></option>
    <option value="M.E.Biomedical Engineering"></option>
   </datalist>

   <div class="research">
    <input type="text" name="Research" id="research" placeholder="Research Name">
    <input min="1950" max="2025" type="Number" name="Research_year" id="research-year" placeholder="Year of Passing">
   </div>

   <div class="inp">

    <input type="text" name="Designation" id="designation" required placeholder="Designation">
    <i id="designation-check" class="indicator">&#33;</i>
   </div>

   <div class="inp">
    <input type="text" name="Working_company" id="working-company" placeholder="Currently Working Company">
   </div>

   <div class="inp">
    <input type="text" name="Country_of_residence" id="country-of-residence" placeholder="Country of Residence"
     required>
    <i id="country-of-residence-check" class="indicator">&#33;</i>
   </div>

   <div class="inp">
    <input type="text" name="City" id="city" placeholder="City" required>
    <i id="city-check" class="indicator">&#33;</i>
   </div>

   <div class="inp">
    <input type="text" name="Home" id="home-town" placeholder="Home Town" required>
    <i id="home-town-check" class="indicator">&#33;</i>
   </div>

   <div class="skills">
    <h3>Select your skills : </h3>

    <div class="skill-select">
     <input type="checkbox" name="skill" value="Football">
     <label for="indoor-games">Football</label>
    </div>

    <div class="skill-select">
     <input type="checkbox" name="skill" value="VolleyBall">
     <label for="volley-ball">Volley Ball</label>
    </div>

    <div class="skill-select">
     <input type="checkbox" name="skill" value="Cricket">
     <label for="cricket">Cricket</label>
    </div>

    <div class="skill-select">
     <input type="checkbox" name="skill" value="Hockey">
     <label for="hockey">Hockey</label>
    </div>

    <div class="skill-select">
     <input type="checkbox" name="skill" value="Others">
     <label for="indoor-games">Others</label>
     <textarea name="Other_skills" id="other-skills" cols="30" rows="10"></textarea>
    </div>

   </div>
   <button type="submit" class="btn btn-danger">Submit</button>

  </div>
 </form>
 </form>

 <script src="/js/sign_up.js"></script>
</body>

<%- include('footer') -%>

</html>
