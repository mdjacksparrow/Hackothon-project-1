 <div class="main">

  <div class="header">
   <p class="pl-3"> <span id="value"><%= NumberOfMembers %></span> members in community</p>
  </div>


  <% for(var i = 0; i < ArrOfUser.length; i++){ %>
  <div class="member">
   <img src="/img/photo-4.jpeg">

  <form action='/aboutForAlumni' method="post">
   <div class="member-detail">
     <a href="#" class="member-name"><%= ArrOfUser[i].firstName + " " + ArrOfUser[i].secondName %></a>
     <input class="member-year" type="text" name="regNo" value= <%= ArrOfUser[i].regNo %> readonly>
     <input class="member-home-town" type="text"  value= <%= ArrOfUser[i].ugYearOfPassing %> readonly>
     <input class="member-degree" type="text"  value= <%= ArrOfUser[i].city %> readonly>
