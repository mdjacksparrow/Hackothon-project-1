directorate DB
  {college list ---> collegeDB}


sample DB structure:

directorateDB & collegeListNameDB;

directorateDB{
 collegeDetail {
  name : String,
  Id   : Number
 }
}

collegeListNameDB{
 alumni{
  username: String,
  _regNo: Number,
  email : String,
  password : String,
  firstName : String,
  secondName : String,
  phone : Number,
  collegeName : String,
  ugCourse : String,
  ugYearOfPassing : Date,
  pgCourse : String,
  pgYearOfPassing : Date,
  research : String,
  researchYearOfPassing : Date,
  designation : String,
  companyName : String,
  residence : String,
  city : String,
  hometown : String,
  skills : {
   football : boolean,
   volleyball : boolean,
   cricket : boolean,
   hockey : boolean,
   others : boolean
  }
 }
}


